ControlPort {{env['TOR_CONTROL_PORT']}}
{% if 'TOR_CONTROL_AUTH_PASSWORD' in env %}
HashedControlPassword {{env['TOR_CONTROL_AUTH_PASSWORD']}}
{% endif %}
{% if 'TOR_CONTROL_AUTH_COOKIE' in env %}
CookieAuthentication 1
{% endif %}
{% endif %}

